/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 通用样式 */
.page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.card {
  background-color: #ffffff;
  border-radius: 12rpx;
  margin: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.btn-primary {
  background-color: #1976d2;
  color: #ffffff;
  border-radius: 8rpx;
  border: none;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
}

.btn-secondary {
  background-color: #ffffff;
  color: #1976d2;
  border: 2rpx solid #1976d2;
  border-radius: 8rpx;
  padding: 18rpx 38rpx;
  font-size: 32rpx;
}

.text-primary {
  color: #1976d2;
}

.text-secondary {
  color: #666666;
}

.text-success {
  color: #4caf50;
}

.text-warning {
  color: #ff9800;
}

.text-error {
  color: #f44336;
}

.text-center {
  text-align: center;
}

.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-row {
  flex-direction: row;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

.align-center {
  align-items: center;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.mb-30 {
  margin-bottom: 30rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

.mt-30 {
  margin-top: 30rpx;
}

.p-20 {
  padding: 20rpx;
}

.p-30 {
  padding: 30rpx;
}

.font-bold {
  font-weight: bold;
}

.font-large {
  font-size: 36rpx;
}

.font-medium {
  font-size: 32rpx;
}

.font-small {
  font-size: 28rpx;
}